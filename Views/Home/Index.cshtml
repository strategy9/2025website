@section Scripts {
    <script>
        // Newsletter and Contact form JavaScript
        function newsletterForm() {
            return {
                firstName: '',
                lastName: '',
                email: '',
                submitting: false,
                success: false,
                message: '',
                async submitNewsletter() {
                    this.submitting = true;
                    this.message = '';
                    
                    try {
                        const response = await fetch('/Home/Newsletter', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({
                                firstName: this.firstName,
                                lastName: this.lastName,
                                email: this.email
                            })
                        });
                        
                        const result = await response.json();
                        this.success = result.success;
                        this.message = result.message;
                        
                        if (result.success) {
                            this.firstName = '';
                            this.lastName = '';
                            this.email = '';
                        }
                    } catch (error) {
                        this.success = false;
                        this.message = 'An error occurred. Please try again.';
                    } finally {
                        this.submitting = false;
                    }
                }
            };
        }
        
        function contactForm() {
            return {
                name: '',
                email: '',
                property: '',
                message: '',
                submitting: false,
                success: false,
                responseMessage: '',
                async submitContact() {
                    this.submitting = true;
                    this.responseMessage = '';
                    
                    try {
                        const response = await fetch('/Home/Contact', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({
                                name: this.name,
                                email: this.email,
                                property: this.property,
                                message: this.message
                            })
                        });
                        
                        const result = await response.json();
                        this.success = result.success;
                        this.responseMessage = result.message;
                        
                        if (result.success) {
                            this.name = '';
                            this.email = '';
                            this.property = '';
                            this.message = '';
                        }
                    } catch (error) {
                        this.success = false;
                        this.responseMessage = 'An error occurred. Please try again.';
                    } finally {
                        this.submitting = false;
                    }
                }
            };
        }
    </script>
}
