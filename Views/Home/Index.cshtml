        // Survey Response Tracking
        async function getSurveyStatistics() {
            try {
                // Call SurveyIQ API directly (same as G2E site)
                const url = `${SURVEY_BASE_URL}/api/services/app/Survey/GetPublicStatistics?publicId=${SURVEY_PUBLIC_ID}`;

                const response = await fetch(url, {
                    method: 'GET',
                    headers: {
                        'Accept': 'application/json'
                    },
                    mode: 'cors',
                    credentials: 'omit'
                });

                const text = await response.text();

                if (!text) {
                    throw new Error('Empty response from server');
                }

                let data;
                try {
                    data = JSON.parse(text);
                } catch (e) {
                    throw new Error('Invalid JSON response');
                }

                const stats = data.result || data;

                if (!stats || typeof stats !== 'object') {
                    throw new Error('No valid data in response');
                }

                return {
                    surveyTitle: stats.surveyTitle || 'Casino Marketing Challenges',
                    questionText: stats.questionText || 'What\'s your biggest challenge in casino marketing right now?',
                    totalResponses: stats.totalResponses || 0,
                    answerOptions: stats.answerOptions || []
                };

            } catch (error) {
                console.error('API Error:', error);
                // Return fallback data structure
                return {
                    surveyTitle: 'Casino Marketing Challenges',
                    questionText: 'What\'s your biggest challenge in casino marketing right now?',
                    totalResponses: 0,
                    answerOptions: []
                };
            }
        }

        async function trackSurveyResponse(value, answer, event) {
            event.preventDefault();

            // Hide survey buttons
            document.getElementById('surveyButtons').style.display = 'none';

            // Show loading state
            document.getElementById('surveyResults').style.display = 'block';
            document.getElementById('resultsChart').innerHTML = '<div class="text-center py-8"><div class="text-[#3eb3e6] text-lg">Loading live results...</div></div>';

            // Submit the actual survey response
            const actualUrl = event.target.href;
            fetch(actualUrl, {
                method: 'GET',
                mode: 'no-cors'
            }).then(() => {
                console.log('Survey response submitted to SurveyIQ');
            }).catch(err => {
                console.log('Submission may still have worked:', err);
            });

            // Wait a moment for the response to register, then fetch real results
            setTimeout(async () => {
                try {
                    const stats = await getSurveyStatistics();
                    displayRealResults(stats, answer);
                } catch (error) {
                    console.error('Error fetching results:', error);
                    // Fallback to simple confirmation
                    displayFallbackResults(answer);
                }
            }, 1500);
        }

        function displayRealResults(stats, userAnswer) {
            const resultsContainer = document.getElementById('resultsChart');

            let resultsHTML = `
                <div class="space-y-4">
                    <p class="text-center text-gray-600 mb-6">
                        <strong class="text-2xl text-[#3eb3e6]">${stats.totalResponses || 1}</strong> casino marketing professionals have responded
                    </p>
            `;

            // If we have real data from the API
            if (stats.answerOptions && stats.answerOptions.length > 0) {
                // Sort by percentage
                const sortedResults = [...stats.answerOptions].sort((a, b) => b.percentage - a.percentage);

                sortedResults.forEach(option => {
                    const isSelected = option.text === userAnswer || option.text.includes(userAnswer);

                    resultsHTML += `
                        <div class="relative ${isSelected ? 'ring-2 ring-[#3eb3e6] rounded-lg' : ''}">
                            <div class="bg-gray-200 rounded-lg h-12 overflow-hidden relative">
                                <div class="absolute inset-0 bg-gradient-to-r from-[#3eb3e6] to-[#005b8b] transition-all duration-1000"
