@{
    ViewData["Title"] = "Support";
}

<!-- Support Hero Section -->
<section class="pt-24 pb-16 bg-gradient-to-br from-[#3eb3e6] via-[#2a8fc9] to-[#005b8b]">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center text-white">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">How Can We Help You?</h1>
        <p class="text-xl text-blue-100">
            Our support team is here to help. Submit a ticket and we'll get back to you as soon as possible.
        </p>
    </div>
</section>

<!-- Support Form Section -->
<section class="py-16 bg-gray-50">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
        
        <!-- Support Form -->
        <div class="bg-white rounded-xl shadow-lg p-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Submit a Support Request</h2>
            
            <div x-data="supportForm()">
                <form x-on:submit.prevent="submitSupport" class="space-y-6">
                    
                    <!-- Name -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            Your Name <span class="text-red-500">*</span>
                        </label>
                        <input type="text" x-model="name" required 
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#3eb3e6] focus:border-transparent">
                    </div>

                    <!-- Email -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            Email Address <span class="text-red-500">*</span>
                        </label>
                        <input type="email" x-model="email" required 
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#3eb3e6] focus:border-transparent">
                    </div>

                    <!-- Company/Property -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            Company/Property
                        </label>
                        <input type="text" x-model="company" 
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#3eb3e6] focus:border-transparent">
                    </div>

                    <!-- Product -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            Which Product? <span class="text-red-500">*</span>
                        </label>
                        <select x-model="product" required
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#3eb3e6] focus:border-transparent">
                            <option value="">Select a product...</option>
                            <option value="PlayerIQ">PlayerIQ</option>
                            <option value="EmailIQ">EmailIQ</option>
                            <option value="SurveyIQ">SurveyIQ</option>
                            <option value="WiFiIQ">WiFiIQ</option>
                            <option value="RaffleIQ">RaffleIQ</option>
                            <option value="EmployeeIQ">EmployeeIQ</option>
                            <option value="TableIQ">TableIQ</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>

                    <!-- Priority -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            Priority <span class="text-red-500">*</span>
                        </label>
                        <select x-model="priority" required
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#3eb3e6] focus:border-transparent">
                            <option value="">Select priority...</option>
                            <option value="Low">Low - General question</option>
                            <option value="Medium">Medium - Issue affecting some users</option>
                            <option value="High">High - Issue affecting many users</option>
                            <option value="Critical">Critical - System down or major outage</option>
                        </select>
                    </div>

                    <!-- Subject -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            Subject <span class="text-red-500">*</span>
                        </label>
                        <input type="text" x-model="subject" required 
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#3eb3e6] focus:border-transparent"
                               placeholder="Brief description of your issue">
                    </div>

                    <!-- Description -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            Description <span class="text-red-500">*</span>
                        </label>
                        <textarea x-model="description" required rows="6"
                                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#3eb3e6] focus:border-transparent"
                                  placeholder="Please provide as much detail as possible..."></textarea>
                        <p class="text-sm text-gray-500 mt-1">Include any error messages, screenshots, or steps to reproduce the issue.</p>
                    </div>

                    <!-- Submit Button -->
                    <div class="flex gap-4">
                        <button type="submit" x-bind:disabled="submitting"
                                class="flex-1 bg-[#3eb3e6] text-white px-8 py-4 rounded-lg font-semibold hover:bg-[#2a8fc9] disabled:opacity-50 disabled:cursor-not-allowed transition-colors flex items-center justify-center">
                            <span x-show="!submitting" class="flex items-center">
                                Submit Support Request
                            </span>
                            <span x-show="submitting" class="flex items-center">
                                <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                </svg>
                                Creating Ticket...
                            </span>
                        </button>
                    </div>

                    <!-- Success Message -->
                    <div x-show="success" x-cloak class="bg-green-50 border border-green-200 rounded-lg p-4">
                        <div class="flex items-start">
                            <svg class="w-6 h-6 text-green-600 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            <div>
                                <h3 class="font-semibold text-green-900 mb-1">Support Request Submitted!</h3>
                                <p class="text-green-800" x-text="responseMessage"></p>
                                <p class="text-sm text-green-700 mt-2" x-show="ticketKey">
                                    Ticket Number: <span class="font-mono font-bold" x-text="ticketKey"></span>
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Error Message -->
                    <div x-show="error && !success" x-cloak class="bg-red-50 border border-red-200 rounded-lg p-4">
                        <div class="flex items-start">
                            <svg class="w-6 h-6 text-red-600 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            <div>
                                <h3 class="font-semibold text-red-900 mb-1">Submission Error</h3>
                                <p class="text-red-800" x-text="responseMessage"></p>
                            </div>
                        </div>
                    </div>

                </form>
            </div>
        </div>

        <!-- Additional Support Options -->
        <div class="mt-8 grid md:grid-cols-2 gap-6">
            <div class="bg-white rounded-lg p-6 shadow">
                <h3 class="font-semibold text-gray-900 mb-2 flex items-center">
                    <svg class="w-5 h-5 text-[#3eb3e6] mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                    Phone Support
                </h3>
                <p class="text-gray-600 mb-2">For urgent issues:</p>
                <a href="tel:1-855-838-3999" class="text-[#3eb3e6] font-semibold hover:text-[#2a8fc9]">1-855-838-3999</a>
                <p class="text-sm text-gray-500 mt-1">Monday - Friday, 9am - 5pm PST</p>
            </div>

            <div class="bg-white rounded-lg p-6 shadow">
                <h3 class="font-semibold text-gray-900 mb-2 flex items-center">
                    <svg class="w-5 h-5 text-[#3eb3e6] mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                    Email Support
                </h3>
                <p class="text-gray-600 mb-2">Send us an email:</p>
                <a href="mailto:support@strategy9.com" class="text-[#3eb3e6] font-semibold hover:text-[#2a8fc9]">support@strategy9.com</a>
                <p class="text-sm text-gray-500 mt-1">We typically respond within 24 hours</p>
            </div>
        </div>

    </div>
</section>

@section Scripts {
    <script>
        function supportForm() {
            return {
                name: '',
                email: '',
                company: '',
                product: '',
                priority: '',
                subject: '',
                description: '',
                submitting: false,
                success: false,
                error: false,
                responseMessage: '',
                ticketKey: '',
                
                async submitSupport() {
                    this.submitting = true;
                    this.success = false;
                    this.error = false;
                    this.responseMessage = '';
                    this.ticketKey = '';
                    
                    try {
                        const response = await fetch('/Home/Support', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({
                                name: this.name,
                                email: this.email,
                                company: this.company,
                                product: this.product,
                                priority: this.priority,
                                subject: this.subject,
                                description: this.description
                            })
                        });
                        
                        const result = await response.json();
                        
                        if (result.success) {
                            this.success = true;
                            this.responseMessage = result.message;
                            this.ticketKey = result.ticketKey;
                            
                            // Clear form
                            this.name = '';
                            this.email = '';
                            this.company = '';
                            this.product = '';
                            this.priority = '';
                            this.subject = '';
                            this.description = '';
                            
                            // Scroll to success message
                            setTimeout(() => {
                                window.scrollTo({ top: 0, behavior: 'smooth' });
                            }, 100);
                        } else {
                            this.error = true;
                            this.responseMessage = result.message;
                        }
                        
                    } catch (error) {
                        console.error('Error submitting support request:', error);
                        this.error = true;
                        this.responseMessage = 'An unexpected error occurred. Please try again or contact us at support@strategy9.com';
                    } finally {
                        this.submitting = false;
                    }
                }
            };
        }
    </script>
}
